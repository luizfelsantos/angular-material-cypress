{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2020", "dom"],
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "out-tsc"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"]
}